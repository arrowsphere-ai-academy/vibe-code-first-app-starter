{
  "name": "Vibe code your first app (Codespace)",
  "image": "mcr.microsoft.com/devcontainers/python:3",
  "forwardPorts": [8501],
  "portsAttributes": {
    "8501": { "label": "Streamlit app", "onAutoForward": "openBrowser" }
  },
  "postCreateCommand": "echo 'Codespace ready.'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ]
    }
  }
}
